      <TargetMobs>
        <TargetMob Name="Aenc Thon, Lord of the Lengthsome Gait" Id="&LordOfLengthsomeGait;" Weight="1"/>
        <TargetMob Name="Shade of Fear" Id="&ShadeOfFear;" Weight="1"/>
        <TargetMob Name="Liar's Lyre" Id="&LiarsLyre;" Weight="100"/>
      </TargetMobs>
    </GrindArea>
  </GrindAreas>
</Profile>
